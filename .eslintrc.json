{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "arrow-parens": 1,
        "func-call-spacing": 0,
        "indent": [
            1,
            2,
            {
                "ignoredNodes": [
                    "CallExpression"
                ]
            }
        ],
        "no-unexpected-multiline": 0
    }
}